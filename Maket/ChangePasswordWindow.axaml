<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="750" d:DesignHeight="500"
        x:Class="Maket.ChangePasswordWindow"
        Title="Смена пароля — Система управления ИТ-проектами"
        MinHeight="480" 
        MinWidth="580"
        Background="#F0F4F8"> <!-- Светлый фон окна (холодный тон) -->

    <Border Margin="20" Background="#FFFFFF" CornerRadius="10" BorderBrush="#B0C4DE" BorderThickness="2"> <!-- Белый фон внутреннего блока, светлая обводка -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="15">
            
            <Border Background="#4682B4" Padding="15" CornerRadius="8" HorizontalAlignment="Stretch"> <!-- Темно-синий заголовок -->
                <TextBlock Text="Смена пароля"
                           HorizontalAlignment="Center"
                           FontSize="32"
                           FontFamily="Segoe UI"
                           FontWeight="SemiBold"
                           Foreground="#FFFFFF"/> <!-- Белый текст заголовка -->
            </Border>

            <TextBox Margin="0 10 0 0"
                         MinWidth="280"
                         MaxWidth="360"
                         Watermark="Введите текущий пароль"
                         HorizontalContentAlignment="Center"
                         FontSize="16"
                         Background="#F8F9FA" 
                         BorderBrush="#B0C4DE"  
                         BorderThickness="1"/>

            <TextBox Margin="0 15 0 0"
                         MinWidth="280"
                         MaxWidth="360"
                         Watermark="Введите новый пароль"
                         HorizontalContentAlignment="Center"
                         FontSize="16"
                         Background="#F8F9FA" 
                         BorderBrush="#B0C4DE"  
                         BorderThickness="1"/>

            <TextBox Margin="0 15 0 0"
                         MinWidth="280"
                         MaxWidth="360"
                         Watermark="Подтвердите новый пароль"
                         HorizontalContentAlignment="Center"
                         FontSize="16"
                         Background="#F8F9FA" 
                         BorderBrush="#B0C4DE"  
                         BorderThickness="1"/>
            <Button MinWidth="180"
                    MinHeight="45"
                    HorizontalAlignment="Center"
                    Margin="0 25 0 0"
                    Background="#5B9BD5"  
                    Content="Сменить пароль"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="18"
                    FontWeight="Medium"
                    Foreground="#FFFFFF"  
                    BorderThickness="0"/>

        </StackPanel>
    </Border>
</Window>