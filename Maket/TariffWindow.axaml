<!-- Views/TariffWindow.axaml -->
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="650"
        x:Class="Maket.TariffWindow"
        Title="Управление тарифами — Система управления ИТ-проектами"
        MinWidth="800"
        MinHeight="600">

    <Grid Background="#F0F8FF" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2F4F4F" CornerRadius="5" Margin="0,0,0,15">
            <TextBlock Text="Управление тарифами" FontSize="26" Margin="10" HorizontalAlignment="Center"
                       Foreground="White" FontWeight="Bold" />
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="300" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" MinWidth="250" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#556B2F" BorderThickness="2" Background="#F5FFFA" CornerRadius="5">
                <ListBox x:Name="TariffsListBox"
                         Margin="10"
                         Background="White"
                         BorderThickness="0" />
            </Border>

            <!-- Разделитель -->
            <Border Grid.Column="1" Background="#556B2F" CornerRadius="2" />

            <Border Grid.Column="2" BorderBrush="#8B0000" BorderThickness="2" Background="#FFF0F5" CornerRadius="5"
                    Margin="15,0,0,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Информация о тарифе" Margin="10,5,0,10"
                               FontWeight="Bold" Foreground="#8B0000" />
                    <StackPanel DockPanel.Dock="Bottom" Spacing="10" Margin="15">
                        <TextBlock Text="Название" Foreground="#2F4F4F" />
                        <TextBox x:Name="NameTextBox" IsEnabled="False" Background="White" BorderBrush="#8B0000" />

                        <TextBlock Text="Компьютеров (мин/макс)" Foreground="#2F4F4F" />
                        <TextBox x:Name="ComputersRangeTextBox" IsEnabled="False" Background="White" BorderBrush="#8B0000" />

                        <TextBlock Text="Цена за единицу (руб.)" Foreground="#2F4F4F" />
                        <TextBox x:Name="PricePerUnitTextBox" IsEnabled="False" Background="White" BorderBrush="#8B0000" />

                        <TextBlock Text="Цена фиксированная (руб.)" Foreground="#2F4F4F" />
                        <TextBox x:Name="FixedPriceTextBox" IsEnabled="False" Background="White" BorderBrush="#8B0000" />

                        <TextBlock Text="Услуги" Foreground="#2F4F4F" />
                        <TextBox x:Name="ServicesTextBox" IsEnabled="False" Background="White" BorderBrush="#8B0000"
                                 TextWrapping="Wrap" AcceptsReturn="True" Height="100" />
                        
                        <Button x:Name="RefreshButton" Content="Обновить" Click="RefreshButtonClicked" Margin="0,10,0,0" Background="#696969"
                                Foreground="White" BorderThickness="0" />
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Кнопка закрытия -->
        <Button x:Name="CloseButton" Grid.Row="2" Content="Закрыть" HorizontalAlignment="Right" Margin="0,20,0,0"
                MinWidth="100" Background="#808080" Foreground="White" BorderThickness="0" Click="CloseWindow"/>

    </Grid>
</Window>